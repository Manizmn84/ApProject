@model DebugModels.Models.ViewModels.InstructorDashboardViewModel

@{
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
}

<style>
    .card-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .card-hover:hover {
            transform: scale(1.03);
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.15);
        }
</style>

<h2 class="mb-4">Welcome, @Model.Instructor.User?.first_name!</h2>

<div class="row g-4">

    <!-- Students Count Card -->
    <div class="col-md-4">
        <div class="card text-white bg-primary shadow-sm card-hover">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-people-fill"></i> Students
                </h5>
                <p class="fs-3">@Model.StudentCount</p>
            </div>
        </div>
    </div>

    <!-- Classes Count Card -->
    <div class="col-md-4">
        <div class="card text-white bg-success shadow-sm card-hover">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-journal-text"></i> Classes
                </h5>
                <p class="fs-3">@Model.ClassCount</p>
            </div>
        </div>
    </div>

    <!-- Instructor Info Card -->
    <div class="col-md-4">
        <div class="card border-secondary shadow-sm card-hover">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-person-badge"></i> Your Info
                </h5>
                <p class="mb-1"><strong>Name:</strong> @Model.Instructor.User?.first_name</p>
                <p class="mb-1"><strong>Department:</strong> @Model.Instructor.Department?.Name</p>
                <p class="mb-0"><strong>Hire Date:</strong> @Model.Instructor.hire_date.ToShortDateString()</p>
            </div>
        </div>
    </div>

</div>
