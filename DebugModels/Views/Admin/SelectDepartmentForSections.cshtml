@model DebugModels.Models.ViewModels.SelectDepartmentViewModel

<h2>Select Department</h2>

<form asp-action="SectionTable" method="get">
    <div class="form-group">
        <label for="SelectedDepartmentId">Department:</label>
        <select asp-for="SelectedDepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control" required>
            <option value="">-- Select Department --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">View Sections</button>
</form>
