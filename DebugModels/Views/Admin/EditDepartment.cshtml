@model DebugModels.Models.Department

@{
    ViewData["Title"] = "Edit Department";
}

<h2>Edit Department</h2>

@if (ViewData["ExistDepartment"] != null)
{
    <div class="alert alert-danger">
        @ViewData["ExistDepartment"]
    </div>
}

<form asp-action="EditDepartment" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Building" class="form-label"></label>
        <input asp-for="Building" class="form-control" />
        <span asp-validation-for="Building" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Budget" class="form-label"></label>
        <input asp-for="Budget" class="form-control" />
        <span asp-validation-for="Budget" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
