@model DebugModels.Models.Department

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Department";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">
                <i class="bi bi-pencil-square text-primary"></i> Edit Department
            </h3>

            @if (ViewData["ExistDepartment"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewData["ExistDepartment"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="EditDepartment" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">
                        <i class="bi bi-building"></i> Department Name
                    </label>
                    <input asp-for="Name" class="form-control" placeholder="Enter department name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Building" class="form-label fw-semibold">
                        <i class="bi bi-house-door-fill"></i> Building
                    </label>
                    <input asp-for="Building" class="form-control" placeholder="e.g. Science Hall" />
                    <span asp-validation-for="Building" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Budget" class="form-label fw-semibold">
                        <i class="bi bi-cash-stack"></i> Budget
                    </label>
                    <input asp-for="Budget" class="form-control" placeholder="Enter budget amount" />
                    <span asp-validation-for="Budget" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a href="@Url.Action("DepartmentTable", "Admin")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

