@{
    ViewBag.Title = "Assign Student to Section";
    var sec = ViewBag.Section as DebugModels.Models.Sections;
    var students = ViewBag.Students as List<DebugModels.Models.Student>;
}

<h2>Assign Student to Section</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="card p-3 mt-3 shadow-sm">
    <h4>Class Info</h4>
    <ul>
        <li><strong>Course:</strong> @sec?.Course?.Title</li>
        <li><strong>Department:</strong> @sec?.Course?.Department?.Name</li>
        <li><strong>Room:</strong> @sec?.ClassRoom?.RoomNumber (@sec?.ClassRoom?.buliding)</li>
        <li><strong>Time:</strong> @sec?.TimeSlot?.Day | @sec?.TimeSlot?.StartTime.ToString("HH:mm") - @sec?.TimeSlot?.EndTime.ToString("HH:mm")</li>
    </ul>

    <form asp-action="AssignStudent" method="post">
        <input type="hidden" name="sectionId" value="@sec?.SectionsId" />
        <label><strong>Select Student:</strong></label>
        <select name="studentId" class="form-control mb-2" required>
            <option value="">-- Choose Student --</option>
            @foreach (var student in students)
            {
                <option value="@student.StudentId">@student.User?.first_name @student.User?.last_name (ID: @student.StudentId)</option>
            }
        </select>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">✅ Assign</button>
            <a href="@Url.Action("SectionTable", "Admin")" class="btn btn-secondary">⬅ Back</a>
        </div>
    </form>
</div>
