@{
    ViewBag.Title = "Create Section";
}

<h2>Create New Section</h2>

<form asp-action="CreateSection" method="post" style="max-width: 600px;">
    <div class="form-group">
        <label>Course:</label>
        <select name="courseId" class="form-control" required>
            <option value="">-- Select Course --</option>
            @foreach (var c in ViewBag.Courses as List<DebugModels.Models.Course>)
            {
                <option value="@c.CourseId">@c.Title</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Building:</label>
        <input name="building" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Room Number:</label>
        <input name="roomNumber" type="number" class="form-control" required min="1" />
    </div>

    <div class="form-group">
        <label>Capacity:</label>
        <input name="capacity" type="number" class="form-control" required min="1" />
    </div>

    <div class="form-group">
        <label>Day:</label>
        <select name="day" class="form-control" required>
            <option value="">-- Select Day --</option>
            @foreach (var d in ViewBag.AllDays as string[])
            {
                <option value="@d">@d</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Start Time:</label>
        <input name="startTime" type="time" class="form-control" required />
    </div>

    <div class="form-group">
        <label>End Time:</label>
        <input name="endTime" type="time" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Semester (1 or 2):</label>
        <input name="semester" type="number" class="form-control" required min="1" max="2" />
    </div>

    <div class="form-group">
        <label>Year:</label>
        <input name="year" type="number" class="form-control" required min="2000" max="3000" />
    </div>

    <div class="form-group">
        <label>Final Exam Date:</label>
        <input name="finalExamDate" type="date" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Create Section</button>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
}




