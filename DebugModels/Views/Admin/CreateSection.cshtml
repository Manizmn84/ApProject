@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Create Section";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0"><i class="bi bi-easel-fill"></i> Create New Section</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateSection" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Course</label>
                            <select name="courseId" required class="form-select">
                                <option value="">-- Select Course --</option>
                                @foreach (var course in ViewBag.Courses)
                                {
                                    <option value="@course.CourseId">@course.Title</option>
                                }
                            </select>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Building</label>
                                <input type="text" name="building" class="form-control" placeholder="e.g. Engineering B" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Room Number</label>
                                <input type="number" name="roomNumber" class="form-control" required min="1" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Capacity</label>
                                <input type="number" name="capacity" class="form-control" required min="1" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Semester (1 or 2)</label>
                                <input type="number" name="semester" class="form-control" required min="1" max="2" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Year</label>
                                <input type="number" name="year" class="form-control" required min="2000" max="3000" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Final Exam Date</label>
                                <input type="date" name="finalExamDate" class="form-control" required />
                            </div>
                        </div>

                        <div class="mt-3">
                            <label class="form-label fw-semibold">Select Day</label>
                            <div class="d-flex flex-wrap gap-3">
                                @foreach (var day in ViewBag.AllDays as string[])
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="day" value="@day" id="day_@day" required />
                                        <label class="form-check-label" for="day_@day">@day</label>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="row mt-3 g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Start Time</label>
                                <input type="time" name="startTime" class="form-control" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">End Time</label>
                                <input type="time" name="endTime" class="form-control" required />
                            </div>
                        </div>

                        <div class="mt-3">
                            <label class="form-label fw-semibold">Description</label>
                            <textarea name="description" class="form-control" rows="3" placeholder="e.g. Weekly lecture on data structures" required></textarea>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg px-5 shadow-sm">
                                <i class="bi bi-plus-circle"></i> Create Section
                            </button>
                        </div>
                    </form>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger mt-4 d-flex align-items-center">
                            <i class="bi bi-exclamation-circle-fill me-2"></i>
                            <span>@ViewBag.ErrorMessage</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





