@model List<DebugModels.Models.Course>

<h2>Course List</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Code</th>
            <th>Unit</th>
            <th>Description</th>
            <th>Exam Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Code</td>
                <td>@course.Unit</td>
                <td>@course.Description</td>
                <td>@course.final_exam_date.ToShortDateString()</td>
                <td>
                    <a asp-action="EditCourse" asp-route-id="@course.CourseId" class="btn btn-warning btn-sm">Edit</a>

                    <form asp-action="DeleteCourse" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@course.CourseId" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this course?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    <a class="btn btn-success" href="@Url.Action("CreateCourse", "Admin")">➕ Create New Course</a>
</div>