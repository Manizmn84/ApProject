@model DebugModels.Models.ViewModels.UserFullInfoViewModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <h2>User Details</h2>hashed_password

    <div class="card mb-4">
        <div class="card-header">Basic Info</div>
        <div class="card-body">
            <p><strong>Name:</strong> @Model.User.first_name @Model.User.last_name</p>
            <p><strong>Email:</strong> @Model.User.email</p>
            <p>
                <strong>Roles:</strong>
                @foreach (var role in Model.User.UserRoles!)
                {
                    <span class="badge bg-dark">@role.Role?.name</span>
                }
            </p>
        </div>
    </div>

    @if (Model.Instructor != null)
    {
        <div class="card mb-4 border-primary">
            <div class="card-header bg-primary text-white">Instructor Info</div>
            <div class="card-body">
                <p><strong>Department:</strong> @Model.Instructor.Department?.Name</p>
                <p><strong>Hire Date:</strong> @Model.Instructor.hire_date.ToShortDateString()</p>
            </div>
        </div>
    }

    @if (Model.Student != null)
    {
        <div class="card mb-4 border-success">
            <div class="card-header bg-success text-white">Student Info</div>
            <div class="card-body">
                <p><strong>Department:</strong> @Model.Student.Department?.Name</p>
                <p><strong>Enrollment Date:</strong> @Model.Student.enrollment_date.ToShortDateString()</p>
            </div>
        </div>
    }

    <a href="@Url.Action("UserTable", "Admin")" class="btn btn-secondary">Back</a>
</div>

