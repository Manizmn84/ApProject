@model List<DebugModels.Models.Instructor>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Instructor Role";
}

<h2 class="mt-3 mb-4">🧑‍🏫 Select Instructor Role to Delete</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No instructors found.</div>
}
else
{
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col">Instructor Name</th>
                <th scope="col">Department</th>
                <th scope="col" style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var instructor in Model)
            {
                <tr>
                    <td>@instructor.User?.first_name @instructor.User?.last_name</td>
                    <td>@instructor.Department?.Name</td>
                    <td>
                        <form asp-action="DeleteInstructor" method="post" class="d-inline">
                            <input type="hidden" name="instructorId" value="@instructor.InstructorId" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this instructor role?');">
                                🗑️ Delete Role
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

