@{
    var user = ViewBag.User as DebugModels.Models.User;
    var departments = ViewBag.Departments as List<DebugModels.Models.Department>;
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3>Create Instructor Profile</h3>
            <p class="mb-0">User: @user.first_name @user.last_name (@user.email)</p>
        </div>
        <div class="card-body">
            <form method="post" action="@Url.Action("CreateInstructor")">
                <input type="hidden" name="userId" value="@ViewBag.UserId" />

                <!-- Salary -->
                <div class="mb-3">
                    <label for="salary" class="form-label">Salary</label>
                    <input type="number"
                           step="0.01"
                           class="form-control"
                           id="salary"
                           name="Salary"
                           placeholder="Enter salary amount"
                           required>
                    <div class="form-text">Enter salary in decimal format (e.g., 50000.00)</div>
                </div>

                <!-- Hire Date -->
                <div class="mb-3">
                    <label for="hire_date" class="form-label">Hire Date</label>
                    <input type="date"
                           class="form-control"
                           id="hire_date"
                           name="hire_date"
                           value="@DateTime.Now.ToString("yyyy-MM-dd")"
                           required>
                </div>

                <!-- Select Department -->
                <div class="mb-3">
                    <label for="DepartmentId" class="form-label">Select Department</label>
                    <select class="form-select" id="DepartmentId" name="DepartmentId" required>
                        <option value="">-- Choose a department --</option>
                        @foreach (var dept in departments)
                        {
                            <option value="@dept.Id">@dept.Name</option>
                        }
                    </select>
                </div>

                <!-- Submit Buttons -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="@Url.Action("UserTable")" class="btn btn-secondary me-md-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Create Instructor</button>
                </div>
            </form>
        </div>
    </div>
</div>
