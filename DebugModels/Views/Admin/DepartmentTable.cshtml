@model List<DebugModels.Models.Department>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Department List</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Building</th>
            <th>Budget</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.Name</td>
                <td>@dept.Building</td>
                <td>@dept.Budget.ToString("C")</td>
                <td>
                    <form asp-action="DeleteDepartment" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@dept.Id" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this department?');">🗑️ Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a class="btn btn-success" href="@Url.Action("CreateDepartment")">➕ Create New Department</a>
</div>
